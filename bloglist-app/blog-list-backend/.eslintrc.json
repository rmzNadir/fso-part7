{
  "env": {
    "jest": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": ["airbnb", "prettier", "plugin:node/recommended"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "error",
    "no-unused-vars": "warn",
    "no-console": "off",
    "func-names": "off",
    "no-process-exit": "off",
    "object-shorthand": "off",
    "node/no-unpublished-require": "warn",
    "no-underscore-dangle": "off",
    "no-param-reassign": "off",
    "global-require": "warn"
  }
}
